extends layout

block append vars
  - var bodyclass = 'article'
  - var fullUrl = locals.url + page.url

block prepend title
  | #{ page.title + " â€¢ "}

block content
  - var data = moment(page.date).lang('pl').format(' MMM DD, YYYY')
  section.post
    h2.post-title= page.title
    .row.well.well-sm
      .col-lg-12.col-md-11.col-sm-10
        i.fa.fa-clock-o
        | #{data}
        |  
        i.fa.fa-user  
        |   
        a(href='#')= page.metadata.author
        |   
        i.fa.fa-tags
        |   
        a(href='#') Web
        | ,
        a(href='#') Javascript
        | .
      //
        img.img-responsive.imageborder(src='/img/7.jpg', alt='Image')
    p!= page.html

  section
    h2.post-title Comments
    div#disqus_thread

  script.
    var disqus_shortname = 'myarmblog'; // required: replace example with your forum shortname

    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
